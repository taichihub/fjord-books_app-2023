<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, t('errors.error')) %> <%= t('books.form.error_message') %></h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, Book.human_attribute_name(:title), style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :memo, Book.human_attribute_name(:memo), style: "display: block" %>
    <%= form.text_area :memo %>
  </div>

  <div>
    <%= form.label :author, Book.human_attribute_name(:author), style: "display: block" %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :picture, Book.human_attribute_name(:picture), style: "display: block" %>
    <%= form.file_field :picture %>
  </div>

  <div>
    <%= form.submit book.new_record? ? t('books.form.create_button') : t('books.form.update_button') %>
  </div>
<% end %>
