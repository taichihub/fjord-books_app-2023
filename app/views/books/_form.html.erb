<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, t('errors.error')) %> <%= t('books.form.error_message') %></h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, t('books.form.title_label'), style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :memo, t('books.form.memo_label'), style: "display: block" %>
    <%= form.text_area :memo %>
  </div>

  <div>
    <%= form.label :author, t('books.form.author_label'), style: "display: block" %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :picture, t('books.form.picture_label'), style: "display: block" %>
    <%= form.file_field :picture %>
  </div>

  <div>
    <%= form.submit book.new_record? ? t('books.form.create_button') : t('books.form.update_button') %>
  </div>
<% end %>
