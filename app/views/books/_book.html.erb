<div id="<%= dom_id book %>">
  <p>
    <strong><%= t('books.show.title') %>:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong><%= t('books.show.memo') %>:</strong>
    <%= book.memo %>
  </p>

  <p>
    <strong><%= t('books.show.author') %>:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong><%= t('books.show.picture') %>:</strong>
    <%= image_tag(book.picture_url) if book.picture.present? %>
  </p>
</div>
