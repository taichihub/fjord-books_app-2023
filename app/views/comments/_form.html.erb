<%= form_with(model: @comment, url: form_url(@commentable, @comment), local: true) do |form| %>

  <div class="field">
    <%= form.label :content, t('activerecord.attributes.comment.content') %>
    <%= form.text_area :content, required: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
