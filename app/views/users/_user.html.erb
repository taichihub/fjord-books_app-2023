<div id="<%= dom_id user %>">

  <p>
    <strong><%= User.human_attribute_name(:email) %>:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:name) %>:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:postal_code) %>:</strong>
    <%= user.postal_code %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:address) %>:</strong>
    <%= user.address %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:self_introduction) %>:</strong>
    <%= user.self_introduction %>
  </p>

  <p>
    <% if user.profile_image.attached? %>
      <strong><%= User.human_attribute_name(:profile_image) %>:</strong>
      <%= image_tag user.resized_profile_image, class: "user__profile-image" %>
    <% else %>
      <%= image_tag "no_image.png", class: "user__profile-image" %>
    <% end %>
  </p>
  
</div>
